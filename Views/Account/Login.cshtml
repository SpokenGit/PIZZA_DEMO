@model Pizza_App.Models.Account

<style type="text/css">
    .abs-center {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }

    .form {
        width: 450px;
    }
</style>


<div style="width:100%">
    <div class="abs-center">
        <form asp-action="Login" class="border p-3 form">
            <div class="form-group">
                <label asp-for="userlogged" class="control-label">Usuario</label>
                <input asp-for="userlogged" class="form-control" />
                <span asp-validation-for="userlogged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password</label>
                <input asp-for="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />

            </div>
        </form>
        </div>
    </div>
