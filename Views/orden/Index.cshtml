@model IEnumerable<Pizza_App.Models.orden>

@{
    ViewData["Title"] = "Lista de Ordenes";
}

<h1>Lista de Ordenes</h1>

<p>
    <a asp-action="Create">Crear nueva Orden</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_solicitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pizza.nombre_pizza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion_envio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentarios)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado_orden)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_solicitante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pizza.nombre_pizza)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_orden)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion_envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentarios)
            </td>
            <td>
                @{
                    if (item.estado_orden == 1)
                    { <span>ENTREGADO</span>
                    }
                    else if (item.estado_orden == 2)
                    { <span>PENDIENTE DE ENTREGA</span>
                    }
                    else if (item.estado_orden == 3)
                    { <span>CANCELADO</span> }
                }

                    </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.nombre_usuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
